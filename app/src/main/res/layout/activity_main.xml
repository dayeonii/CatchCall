<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 앱 타이틀 -->
        <TextView
            android:text="CatchCall 설정"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 권한/배터리 버튼 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btn_perm"
                android:text="권한 요청"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_battery"
                android:text="배터리 최적화"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- 기능 활성화 스위치 -->
        <Switch
            android:id="@+id/switch_feature"
            android:text="자동 회신 기능 활성화"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <!-- 테스트 모드 스위치 -->
        <Switch
            android:id="@+id/switch_test"
            android:text="테스트 모드 (쿨타임 60초)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22000000"
            android:layout_marginTop="16dp"/>

        <!-- 쿨타임 설정 -->
        <TextView
            android:text="쿨타임 설정"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_cooldown_value"
                android:hint="숫자"
                android:inputType="number"
                android:maxLength="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/sp_cooldown_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:entries="@array/cooldown_units"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_save_cooldown"
            android:text="쿨타임 저장"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22000000"
            android:layout_marginTop="16dp"/>

        <!-- 부재중 템플릿 -->
        <TextView
            android:text="부재중 멘트"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/et_missed_tpl"
            android:minLines="4"
            android:maxLines="8"
            android:gravity="top|start"
            android:hint="부재중일 때 발송할 문구"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- 매너콜 템플릿 -->
        <TextView
            android:text="매너콜 멘트"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/et_manner_tpl"
            android:minLines="4"
            android:maxLines="8"
            android:gravity="top|start"
            android:hint="매너콜(통화중)일 때 발송할 문구"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_save_templates"
            android:text="템플릿 저장"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- 안내문 -->
        <TextView
            android:id="@+id/tv_hint"
            android:text="※ 같은 번호는 쿨타임 내 재발송되지 않습니다."
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>